@section scripts 
{
    <script>

        $(document).ready(function() {

            $('#noticiasTable').DataTable({
                ajax: {
                    url: '/api/noticias', // URL para buscar os dados
                    dataSrc: '', // A fonte dos dados é o array no topo do JSON
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row) {
                            return `
                                <ol class="action-toolbar">
                                    <li>
                                        <a href="/noticias/edit/${row.id}" title="Editar" class="btn">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" title="Excluir" class="js-delete" data-noticia-id="${row.id}">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </li>
                                </ol>
                            `;
                        }
                    },
                    { data: 'id' },
                    { data: 'titulo' },
                    { data: 'texto' },
                    { data: 'usuario.nome' },
                    {
                        data: 'tagsNoticia',
                        render: function (data, type, row) {
                            debugger;
                            if (type === 'display' && data && data.length > 0) {
                                var tags = data.map(function (tag) {
                                    debugger;
                                    return tag.descricao;
                                });
                                return tags.join(', ');
                            }
                            return '';
                        }
                    }
                ]
            });

            $("#noticiasTable").on("click", ".js-delete", function () {
                var button = this;
                debugger;

                bootbox.confirm("Tem certeza de que deseja excluir este item?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/noticias/delete/" + $(button).attr("data-noticia-id"),
                            method: "DELETE",
                            success: function () {
                                debugger;
                                $(button).parents("tr").remove();
                            }
                        })
                    }
                });

            });

            $('.tagsSelect').on('change', function () {
                debugger;
                var selectedTagId = $(this).val();
                var noticiaId = $(this).data('noticia-id');
                var tagsTable = $('#tagsTable_' + noticiaId);

                if (selectedTagId) {
                    var select = this; 

                    $.ajax({
                        type: 'POST',
                        url: '/Noticias/AdicionarTag',
                        data: {
                            noticiaId: noticiaId,
                            tagId: selectedTagId
                        },
                        success: function (result) {
                            var selectedTagText = $(select).find('option:selected').text(); 

                            var newRow = $('<tr><td>' + selectedTagText + '</td></tr>');
                            tagsTable.append(newRow);

                            $(select).val("--Selecione uma Tag--");
                        },
                        error: function (error) {
                            console.error('Erro ao adicionar a tag à notícia.');
                        }
                    });
                }
            });
        })
    </script>
}
